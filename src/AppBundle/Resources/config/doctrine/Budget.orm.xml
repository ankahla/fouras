<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Budget" table="budget">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <one-to-many field="items" target-entity="AppBundle\Entity\BudgetItem" mapped-by="budget" fetch="LAZY">
      <cascade>
        <cascade-persist/>
      </cascade>
    </one-to-many>
    <many-to-one field="couple" target-entity="AppBundle\Entity\Couple" fetch="LAZY">
      <join-columns>
        <join-column name="couple_id" referenced-column-name="id" nullable="1"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="service" target-entity="AppBundle\Entity\Service" fetch="LAZY">
      <join-columns>
        <join-column name="service_id" referenced-column-name="id" nullable="1"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
