{% extends 'FrontBundle::Couple/layout.html.twig' %}

{% block banner %}
{% if title is not defined %}
{% set title = 'Couple dashboard' %}
{% endif %}
{% include 'front/banner.html.twig' with {'title' : title} %}
{% endblock %}

{% block body %}
<section id="couple_profile" class="couple-profile-main-page">
    <div class="container">
      {% include 'FrontBundle::Couple/menu.html.twig' %}
      <div class="row">
        <div class="col-md-6">  
          <div class="couple_profile-main-block">
            <div class="upload-profile-block mrgn-bottom-30">
              <h3 class="couple_profile-heading">{% trans %}Upload Profile Photo{% endtrans %}</h3>
              <div class="row">
                <div class="col-md-5 col-sm-4">
                  <div class="upload-img">
                    <img src="{{ asset('bundles/front/images/blog-related-3.jpg') }}" class="img-responsive" alt="upload img">
                  </div>
                </div>
                <div class="col-md-7 col-sm-8">
                  <div class="upload-img-btn">
                    <a href="couple_profile.html#" class="btn btn-pink">{% trans %}Upload Profile Image{% endtrans %}</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="change-password-block">
          <h3 class="couple_profile-heading">{% trans %}Change Password{% endtrans %}</h3>
            <form id="change-password" action="couple_profile.html#">
              <div class="form-group row">
                <div class="col-sm-4"><label>{% trans %}Old Password{% endtrans %}</label></div> 
                <div class="col-sm-8"><input type="text" class="form-control" id="old_password" name="old_password"></div> 
              </div>      
              <div class="form-group row">
                <div class="col-sm-4"><label>{% trans %}New Password{% endtrans %}</label></div> 
                <div class="col-sm-8"><input type="text" class="form-control" id="new_password" name="new_password"></div> 
              </div>      
              <div class="form-group row">
                <div class="col-sm-4"><label>{% trans %}Confirm Password{% endtrans %}</label></div> 
                <div class="col-sm-8"><input type="text" class="form-control" id="confirm_password" name="confirm_password"></div> 
              </div>      
              <div class="form-group row">
                <div class="col-sm-offset-4  col-sm-8"><button type="submit" class="btn btn-pink">{% trans %}Change Password{% endtrans %}</button></div> 
              </div>                                                                        
            </form>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">  
          <div class="couple_profile-main-block">
            <div class="couple_profile-block mrgn-bottom-30">
              <h3 class="couple_profile-heading">{% trans %}Wife Profile{% endtrans %}</h3>
                <form>
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}First Name{% endtrans %}*</label></div> 
                    <div class="col-sm-8"><input type="text" class="form-control" id="f_name" name="f_name"></div> 
                  </div>  
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}Last Name{% endtrans %}*</label></div> 
                    <div class="col-sm-8"><input type="text" class="form-control" id="l_name" name="l_name"></div> 
                  </div>  
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}Email{% endtrans %}*</label></div> 
                    <div class="col-sm-8"><input type="email" class="form-control" id="email" name="email"></div> 
                  </div>
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}Mother Name{% endtrans %}</label></div> 
                    <div class="col-sm-8"><input type="text" class="form-control" id="m_f_name" name="m_f_name"></div> 
                  </div>  
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}Fadher Name{% endtrans %}</label></div> 
                    <div class="col-sm-8"><input type="text" class="form-control" id="f_l_name" name="f_l_name"></div> 
                  </div>
                </form>
            </div>
          </div>
        </div>
        <div class="col-md-6">
                  <div class="couple_profile-main-block">
            <div class="couple_profile-block mrgn-bottom-30">
              <h3 class="couple_profile-heading">{% trans %}Husband Profile{% endtrans %}</h3>
                <form>
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}First Name{% endtrans %}*</label></div> 
                    <div class="col-sm-8"><input type="text" class="form-control" id="f_name" name="f_name"></div> 
                  </div>  
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}Last Name{% endtrans %}*</label></div> 
                    <div class="col-sm-8"><input type="text" class="form-control" id="l_name" name="l_name"></div> 
                  </div>  
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}Email{% endtrans %}*</label></div> 
                    <div class="col-sm-8"><input type="email" class="form-control" id="email" name="email"></div> 
                  </div>
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}Mother Name{% endtrans %}</label></div> 
                    <div class="col-sm-8"><input type="text" class="form-control" id="m_f_name" name="m_f_name"></div> 
                  </div>  
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}Fadher Name{% endtrans %}</label></div> 
                    <div class="col-sm-8"><input type="text" class="form-control" id="f_l_name" name="f_l_name"></div> 
                  </div>
                </form>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
      <div class="col-md-6">
      <div class="social-media-block mrgn-bottom-30">
              <h3 class="couple_profile-heading">{% trans %}Social Media Profile{% endtrans %}</h3>
                <form>
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}Facebook URL{% endtrans %}</label></div> 
                    <div class="col-sm-8"><input type="text" class="form-control" id="facebook_url" name="facebook_url"></div> 
                  </div>   
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}Twitter URL{% endtrans %}</label></div> 
                    <div class="col-sm-8"><input type="text" class="form-control" id="twitter_url" name="twitter_url"></div> 
                  </div>   
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}Youtube URL{% endtrans %}</label></div> 
                    <div class="col-sm-8"><input type="text" class="form-control" id="youtube_url" name="youtube_url"></div> 
                  </div>   
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}Linkedin URL{% endtrans %}</label></div> 
                    <div class="col-sm-8"><input type="text" class="form-control" id="linkedin_url" name="linkedin_url"></div> 
                  </div>   
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}Instagram URL{% endtrans %}</label></div> 
                    <div class="col-sm-8"><input type="text" class="form-control" id="instagram_url" name="instagram_url"></div> 
                  </div>
                   <div class="form-group row">
                        <div class="col-sm-offset-4 col-sm-8"><button class="btn btn-pink">{% trans %}Update Profile{% endtrans %}</button></div> 
                  </div>
                </form>
            </div>
      </div>
      <div class="col-md-6">
                  <div class="wedd-detail-block mrgn-bottom-30">
              <h3 class="couple_profile-heading">{% trans %}Wedding Details{% endtrans %}</h3>
                <form>
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}Wedding Date{% endtrans %}*</label></div> 
                    <div class="col-sm-8"><input type="text" class="form-control datepicker" id="wedd_date" name="wedd_date"></div> 
                  </div>  
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}Wedding City{% endtrans %}*</label></div> 
                    <div class="col-sm-8"><input type="text" class="form-control" id="wedd_city" name="wedd_city"></div> 
                  </div>  
                  <div class="form-group row">
                    <div class="col-sm-4"><label>{% trans %}Weeding State{% endtrans %}*</label></div> 
                    <div class="col-sm-8"><input type="text" class="form-control" id="wedd_state" name="wedd_state"></div> 
                  </div>                                                          
                </form>
            </div>
      </div>
      </div>
    </div>
  </section>
  {% endblock %}