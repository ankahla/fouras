<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="CmsBundle\Entity\Item" table="item">
    <indexes>
      <index name="category_id" columns="category_id"/>
      <index name="cover_image_id" columns="cover_image_id"/>
      <index name="slug" columns="slug"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="150" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="slug" type="string" column="slug" length="150" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="intro" type="text" column="intro" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="content" type="text" column="content" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="extraData" type="text" column="extra_data" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="category" target-entity="Category" fetch="LAZY">
      <join-columns>
        <join-column name="category_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="coverImage" target-entity="Media" fetch="LAZY">
      <join-columns>
        <join-column name="cover_image_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="media" target-entity="Media" inversed-by="item" fetch="LAZY">
      <join-table name="item_media">
        <join-columns>
          <join-column name="item_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="media_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
