<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="CmsBundle\Entity\MenuItem" table="menu_item">
    <indexes>
      <index name="menu_id" columns="menu_id"/>
      <index name="parent_id" columns="parent_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="100" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="ordering" type="integer" column="ordering" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="class" type="string" column="class" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="menu" target-entity="Menu" fetch="LAZY">
      <join-columns>
        <join-column name="menu_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
<!--     <many-to-one field="parent" target-entity="MenuItem" inversed-by="children" fetch="LAZY">
      <join-columns>
        <join-column name="parent_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <one-to-many field="children" target-entity="MenuItem" mapped-by="parent" /> -->
    <one-to-many field="children" target-entity="MenuItem" mapped-by="parent" />
    <many-to-one field="parent" target-entity="MenuItem"  />
    <many-to-one field="content" target-entity="Content" fetch="LAZY">
      <join-columns>
        <join-column name="content_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
