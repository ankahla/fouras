{% extends 'CmsBundle::base.html.twig' %}

{% block body -%}
    <h1>Item list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Title</th>
                <th>Slug</th>
                <th>Intro</th>
                <th>Content</th>
                <th>Extradata</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('item_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.intro }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.extraData }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('item_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('item_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('item_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
