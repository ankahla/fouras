<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Model\SubscriptionPlan" table="subscription_plan">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" column="name" length="255" precision="0" scale="0"/>
    <field name="description" column="description" precision="0" scale="0" nullable="true"/>
    <field name="monthlyPrice" type="decimal" column="monthly_price" precision="10" scale="3"/>
    <field name="inPromotion" type="boolean" column="in_promotion" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="popular" type="boolean" column="popular" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="public" type="boolean" column="public">
      <options>
        <option name="default">1</option>
      </options>
    </field>
    <many-to-many field="features" target-entity="SubscriptionFeature">
      <join-table name="subscription_plan_feature">
        <join-columns>
          <join-column name="plan_id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="feature_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
