<form method="post" action="{{ path('subscription_request_delete', {'id': subscription_request.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subscription_request.id) }}">
    <button class="btn">Delete</button>
</form>
