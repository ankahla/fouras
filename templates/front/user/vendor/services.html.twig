{% extends 'front/user/vendor/layout.html.twig' %}

{% block bodycontent %}
      <p>
      <a class="btn btn-pink" href="{{ path('vendor_service_new') }}">{% trans %}Add new{% endtrans %}</a>
      </p>
      <div class="manage-item-listing-block">
        <table>
          <tbody><tr class="top-heading-row">
            <th class="col-md-3">{% trans %}Image{% endtrans %}</th>
            <th class="col-md-2">{% trans %}Title{% endtrans %}</th>
            <th class="col-md-2">{% trans %}Service{% endtrans %}</th>
            <th class="col-md-2">{% trans %}Address{% endtrans %}</th>
            <th class="col-md-2">{% trans %}Price{% endtrans %}</th>
            <th class="col-md-1">{% trans %}Actions{% endtrans %}</th>
          </tr>
          {% for vendorService in vendor.services %}
          <tr>
            <td class="vendor-img"><img src="{{ asset(vendor_service_pic_dir ~ vendorService.picture)|imagine_filter('320x360') }}" width="200" class="img-responsive" alt="vendor-img"></td>
            <td>{{ vendorService.title }}</td>
            <td>{{ vendorService.service.name }}</td>
            <td>{{ vendorService.address }}</td>
            <td>{{ vendorService.costMin }}</td>
            <td>
              <div class="table-editable-icon">
                <a href="{{ path('vendor_service_edit', {id:vendorService.id}) }}"><i class="fa fa-edit" aria-hidden="true"></i></a>
                <a href="{{ path('vendor_service_delete', {id:vendorService.id}) }}"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
              </div>
            </td>
          </tr>
          {% endfor %}
        </tbody></table>
      </div>
  {% endblock %}