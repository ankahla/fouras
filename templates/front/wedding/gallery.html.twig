{% extends 'front/layout.html.twig' %}

{% block banner %}
{% include 'front/banner.html.twig' with {'title' : 'Gallery'|trans} %}
{% endblock %}

{% block body %}
<section class="ptb80">
    <div class="container">

      <div class="section">
          <h3 class="section-heading">{{ wedding.title }}</h3>
          <p class="section-sub-heading">
            {{ wedding.description|raw }}
          </p>
        </div>

      <div class="row">
        {% if items.total > 0 %}
        
        {% for item in items.results %}
        <div class="col-md-4 col-sm-6">
          <div class="gallery-block">
            <div class="gallery-img">
              <img src="{{ cms_base_url ~ item.images.image_intro }}" class="img-responsive" alt="{{ item.images.image_intro_alt }}">
            </div>
            <div class="overlay-bg"></div>
            <div class="gallery-dtl">
              <!-- <i class="fa fa-heart" aria-hidden="true"></i><span>21</span> -->
              <h4 class="gallery-heading"><a href="{{ cms_base_url ~ (item.images.image_fulltext ? item.images.image_fulltext : item.images.image_intro) }}" title="{{ (item.introtext ? item.introtext : item.category_title)|raw }}">{{ (item.introtext ? item.introtext : item.category_title)|raw }} <i class="fa fa-search-plus" aria-hidden="true"></i></a></h4>
            </div>
          </div>
        </div>
        {% endfor %}

        {% endif %}
      </div>
    </div>
  </section>
{% endblock %}