{% extends 'front/layout.html.twig' %}

{% block banner %}
{% include 'front/banner.html.twig' with {'title' : 'Category Listing'} %}
{% endblock %}

{% block body %}
<!-- category listing -->
  <section class="main-container">
    <div class="container">

      <div class="row">

        {% for service in services %}
        <div class="col-md-4 col-sm-6">
          <div class="vendor-categories-block">
            <div class="vendor-categories-img"> 
              <img src="{{ asset(service.image ? service_pic_dir ~ service.image : 'assets/images/category-listing/default.jpg') | imagine_filter('340x240') }}" class="img-responsive" alt="vendor-category">
              {% if service.vendorServices|length %}<div class="meta-tags">{{ service.vendorServices|length }}</div>{% endif %}
              <div class="overlay-bg"></div>
              <a href="{{ path('vendor_search', {'serviceId':service.id}) }}" class="btn btn-plan">{% trans %}View Details{% endtrans %}</a>
            </div>
            <div class="vendor-categories-dtl">
              <h4 class="vendor-category"><a href="{{ path('vendor_search', {'serviceId':service.id}) }}">{{ service.name|trans }}</a></h4>
            </div>
          </div>
        </div>
        {% endfor %}

    </div>
  </section>
<!-- end category listing -->
{% endblock %}